@model Sporting_Events.Models.Competition

@{
    ViewData["Title"] = "Создать мероприятие";
}

<h1>Создать мероприятие</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название мероприятия</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата начала</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpDate" class="control-label">Дата окончания</label>
                <input asp-for="ExpDate" class="form-control" />
                <span asp-validation-for="ExpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label">Место проведения</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MembersCount" class="control-label">Количество участников</label>
                <input asp-for="MembersCount" class="form-control" />
                <span asp-validation-for="MembersCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrizePool" class="control-label">Призовой фонд</label>
                <input asp-for="PrizePool" class="form-control" />
                <span asp-validation-for="PrizePool" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionTypeId" class="control-label">Тип соревнования</label>
                <select class="form-control" name="CompetitionTypeId" asp-for="CompetitionTypeId">
                    <option value="1">Бег</option>
                    <option value="2">Прыжки</option>
                    <option value="3">Жим</option>
                </select>
                <span asp-validation-for="CompetitionTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Upload" class="control-label">Фото</label>
                <input name="Upload" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку соревнований</a>
</div>

