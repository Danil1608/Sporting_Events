@model Sporting_Events.Models.Account

@{
    ViewData["Title"] = User.Identity.Name;
}

<h1>Профиль</h1>

<hr />

<div class="row p-3">
    <div class="col-md-6 d-flex flex-column justify-content-around">
        <div class="d-flex col-md-8 justify-content-around">
            <h5>@Model.LastName</h5>
            <h5>@Model.Name</h5>
            <h5>@Model.MiddleName</h5>
        </div>
        <div class="d-flex flex-column">
            <div class="d-flex col-md-8">
                <h6 class="mr-2">Роль:</h6>
                <h6>@Model.Role.Name</h6>
            </div>

           
        </div>
    </div>
   
</div>