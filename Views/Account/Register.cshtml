@model Sporting_Events.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<h1>Регистрация</h1>

<hr />

<div class="row justify-content-center">
    <div class="w-100 m-auto">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row justify-content-start">
                <div class="form-group w-25 mr-4">
                    <label asp-for="Login" class="control-label">Логин</label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group w-25">
                    <label asp-for="LastName" class="control-label">Фамилия</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row justify-content-start">
                <div class="form-group w-25 mr-4">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group w-25">
                    <label asp-for="Name" class="control-label">Имя</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row justify-content-start">
                <div class="form-group w-25 mr-4">
                    <label asp-for="ConfirmPassword" class="control-label">Подтверждение пароля</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group w-25">
                    <label asp-for="MiddleName" class="control-label">Отчество</label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row justify-content-start">
                <div class="form-group mr-4">
                    <label asp-for="RoleId" class="control-label">Роль</label>
                    <select class="form-control" name="RoleId" asp-for="RoleId">
                        <option value="2">Организатор</option>
                        <option value="3">Спортсмен</option>
                    </select>
                </div>
                <div class="form-group mr-4">
                    <label asp-for="Age" class="control-label">Возраст</label>
                    <input asp-for="Age" type="number" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group mr-4">
                    <label asp-for="Phone" class="control-label">Номер телефона</label>
                    <input asp-for="Phone" type="tel" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Зарегистрироваться" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
